<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!-- Product Template form view to add Shopify sync functionality -->
  <record id="product_template_form_shopify" model="ir.ui.view">
    <field name="name">product.template.shopify.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='active']" position="after">
        <field name="shopify_sync_enabled" />
        <field name="shopify_external_id" readonly="1" invisible="shopify_external_id == False" />
      </xpath>
    </field>
  </record>

  <!-- Product Template tree view to show Shopify sync status -->
  <record id="product_template_tree_shopify" model="ir.ui.view">
    <field name="name">product.template.shopify.tree</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_tree_view" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='active']" position="after">
        <field name="shopify_sync_enabled" widget="boolean_toggle" />
      </xpath>
    </field>
  </record>

  <!-- Add Shopify actions to product template action menu -->
  <record id="action_product_template_enable_shopify_sync" model="ir.actions.server">
    <field name="name">Enable Shopify Sync</field>
    <field name="model_id" ref="product.model_product_template" />
    <field name="binding_model_id" ref="product.model_product_template" />
    <field name="state">code</field>
    <field name="code">action = records.action_enable_shopify_sync()</field>
  </record>

  <record id="action_product_template_disable_shopify_sync" model="ir.actions.server">
    <field name="name">Disable Shopify Sync</field>
    <field name="model_id" ref="product.model_product_template" />
    <field name="binding_model_id" ref="product.model_product_template" />
    <field name="state">code</field>
    <field name="code">action = records.action_disable_shopify_sync()</field>
  </record>

  <record id="action_product_template_sync_to_shopify" model="ir.actions.server">
    <field name="name">Sync to Shopify Now</field>
    <field name="model_id" ref="product.model_product_template" />
    <field name="binding_model_id" ref="product.model_product_template" />
    <field name="state">code</field>
    <field name="code">action = records.action_sync_to_shopify()</field>
  </record>
</odoo>
