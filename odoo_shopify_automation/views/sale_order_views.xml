<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!-- Sale Order form view to add Shopify sync functionality -->
  <record id="sale_order_form_shopify" model="ir.ui.view">
    <field name="name">sale.order.shopify.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='client_order_ref']" position="after">
        <field name="shopify_sync_enabled" />
        <field name="shopify_order_source" />
        <field name="shopify_export_status" />
        <field name="shopify_last_sync" />
        <field name="shopify_payment_status" readonly="1" />
        <field name="shopify_payment_method" readonly="1" />
        <field name="shopify_fulfillment_status" readonly="1" />
        <field name="shopify_delivery_category" readonly="1" />
        <field name="shopify_delivery_method" readonly="1" />
      </xpath>
      <xpath expr="//field[@name='note']" position="after">
        <field name="shopify_sync_error" invisible="not shopify_sync_error" />
      </xpath>
    </field>
  </record>

  <!-- Sale Order tree view to show Shopify sync status -->
  <record id="sale_order_tree_shopify" model="ir.ui.view">
    <field name="name">sale.order.shopify.tree</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_quotation_tree" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='state']" position="after">
        <field name="shopify_sync_enabled" widget="boolean_toggle" />
        <field name="shopify_order_source" />
        <field name="shopify_export_status" />
        <field name="shopify_payment_status" />
        <field name="shopify_payment_method" />
        <field name="shopify_fulfillment_status" />
        <field name="shopify_delivery_category" />
        <field name="shopify_delivery_method" />
      </xpath>
    </field>
  </record>

  <!-- Add Shopify actions to sale order action menu -->
  <record id="action_sale_order_enable_shopify_sync" model="ir.actions.server">
    <field name="name">Enable Shopify Sync</field>
    <field name="model_id" ref="sale.model_sale_order" />
    <field name="binding_model_id" ref="sale.model_sale_order" />
    <field name="state">code</field>
    <field name="code">action = records.action_enable_shopify_sync()</field>
  </record>

  <record id="action_sale_order_disable_shopify_sync" model="ir.actions.server">
    <field name="name">Disable Shopify Sync</field>
    <field name="model_id" ref="sale.model_sale_order" />
    <field name="binding_model_id" ref="sale.model_sale_order" />
    <field name="state">code</field>
    <field name="code">action = records.action_disable_shopify_sync()</field>
  </record>

  <record id="action_sale_order_export_to_shopify" model="ir.actions.server">
    <field name="name">Export to Shopify</field>
    <field name="model_id" ref="sale.model_sale_order" />
    <field name="binding_model_id" ref="sale.model_sale_order" />
    <field name="state">code</field>
    <field name="code">action = records.action_export_to_shopify()</field>
  </record>

  <record id="action_sale_order_import_from_shopify" model="ir.actions.server">
    <field name="name">Import from Shopify</field>
    <field name="model_id" ref="sale.model_sale_order" />
    <field name="binding_model_id" ref="sale.model_sale_order" />
    <field name="state">code</field>
    <field name="code">action = records.action_import_from_shopify()</field>
  </record>
</odoo>
